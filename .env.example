# Shared defaults (copy this file to .env and fill the secrets below)

# --- Frontend / Expo ---
EXPO_PUBLIC_API_URL=http://localhost:5000

# --- Backend ---
NODE_ENV=development
PORT=5000
SESSION_SECRET=replace-with-strong-secret
DATABASE_URL=replace-with-your-db-url

# Google OAuth (use the credentials you create in Google Cloud)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Allowed redirect targets for OAuth completion
ALLOWED_REDIRECT_URIS=lavei://,http://localhost:8081,exp://127.0.0.1:8081,https://lavei.app,https://lavei.replit.app

# Optional: Expo push service personal token (only needed for push)
EXPO_ACCESS_TOKEN=
